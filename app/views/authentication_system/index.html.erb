<a href="logout">Logout</a><br>

<%= @user.name %> <br>
<%= @user.email %><br>
<br>
<% @tweets.each do |tweet| %>
	<li>
		<% if tweet.likes.find_by_user_id(@user.id) %>
			<%= tweet.content %> <%= link_to "DisLike", url_for(controller:'home' ,action:'like', tweet_id: tweet.id) %>
		<% else %>
			<%= tweet.content %> <%= link_to "Like", url_for(controller:'home' , action:'like', tweet_id: tweet.id) %>
		<% end %>
	</li>
<% end %>

<%= form_tag '/tweet' do %>
	<%= text_area_tag 'content' %>
	<%= submit_tag 'Tweet' %>
<% end %>